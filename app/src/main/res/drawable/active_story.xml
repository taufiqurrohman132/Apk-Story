<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lingkaran gradient luar -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:centerColor="@color/color_base"
                android:endColor="@color/color_variant"
                android:startColor="@color/color_variant"
                android:type="sweep"
                android:useLevel="false" />
        </shape>
    </item>

    <!-- Background putih untuk pinggir foto -->
    <item
        android:bottom="3dp"
        android:end="3dp"
        android:start="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/transparents" />
        </shape>
    </item>
</layer-list>